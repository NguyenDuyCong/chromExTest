{
    "manifest_version": 2,
    
    "name": "Cuộc đời là những cú lừa",
    "description": "Tao lam cho vui thoi",
    "version": "1.0.0",
    
    "icons" : {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },

    "browser_action": {
        "default_icon": "icon_16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "webRequest"
    ]
}